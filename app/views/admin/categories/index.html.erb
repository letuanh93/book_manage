<% provide :title, "Manage Categories" %>
<%= link_to "Add category", new_admin_category_path, class: "btn btn-primary" %>
<%= form_tag admin_categories_path, method: :get do %>
  <%= text_field_tag :search, params[:search] %>
<% end %>
<div class="clr"></div>
<br>
<div class="col-md-12">
  <table class="table table-hover table-bordered">
    <thead>
      <tr>
        <th style="width: 50px;">No.</th>
        <th style="width: 150px;">Name</th>
        <th>Description</th>
        <th style="width: 180px;">Created At</th>
        <th style="width: 50px;">Edit</th>
        <th style="width: 50px;">Del</th>
      </tr>
    </thead>
    <tbody>
      <% if @categories.present? %>
        <% @categories.each_with_index do |e, index| %>
          <tr>
            <td>
              <% params[:page] ||= "1" %>
              <%= get_index params[:page], index, 2 %>
            </td>
            <td><%= e.Name %></td>
            <td><%= e.Description %></td>
            <td><%= l e.created_at, format: :long %></td>
            <td>
              <%= link_to edit_admin_category_path(e), class: "underline" do %>
                Edit
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, e], method: :delete,
                class: "underline text-danger",
                data: {confirm: "Are you sure?"} do %>
                Del
              <% end %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr style="text-align: center;"><td colspan="6">No data</td></tr>
      <% end %>
    </tbody>
  </table>
  <%= will_paginate %>
</div>
